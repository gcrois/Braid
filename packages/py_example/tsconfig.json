{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "noEmit": false,  // We emit .js / .d.ts
        "outDir": "dist"
    },
    "include": ["src"]
}
